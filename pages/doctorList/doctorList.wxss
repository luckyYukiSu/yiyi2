.doctor_list{
  width: 100%;
  margin-top: 50rpx;
  background-color: #E4E2E2;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}
.view_container {
  width: 100%;
  padding: 30rpx 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
}
.doctor_message{
  width: 100%;
}
.first_row{
  width: 100%;
}
.doctor_image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(#FBB8A0, #FFE8CE);
}
.doctor_image image{
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
}
.doctor_name{
  color: #000;
  font-size: 34rpx;
}
.doctor_work{
  margin-left: 20rpx;
  color: #575757;
  font-weight: 500;
}
.doctor_title{
  margin-right: 30rpx;
  width: 60rpx;
  height: 25rpx;
  font-size: 20rpx;
  font-weight: 500;
  text-align: center;
  line-height: 25rpx;
  border-radius: 5rpx;
  color: #3E815D;
  background-color: #E1FFEF;
}
.doctor_location{
  font-size: 24rpx;
  font-weight: 500;
  color: #7C7C7C;
}
.second_row{
  margin-top: 20rpx;
  margin-left: 10rpx;
  color: #575757;
}
.doctor_fun{
  width: 100%;
  margin-top: 10rpx;
}
.doctor_fun_item{
  width: 32%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.doctor_fun_item image{
  width: 30rpx;
  height: 30rpx;
}
.main_online {
  position: relative;
  width: 90%;
  /* height: 950rpx; */
  border-radius: 15rpx;
  top: 50rpx;
  left: 5%;
}

.main_online::before,
.main_online::after {
  content: "";
  display: table;
}

.main_online::after {
  clear: both;
}


