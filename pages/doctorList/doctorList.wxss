}

.option {
  position: relative;
  float: left;
  margin-right: 40rpx;
  margin-bottom: 5rpx;
  padding: 6rpx;
  background-color: #c4c0bd;
  border-radius: 20rpx;
}

.option:active {
  background-color: green;
  color: white;
}

.option.checked {
  background-color: green;
  color: white;
}


.department_category {
  position: relative;
  left: 40rpx;
  width: 90%;
