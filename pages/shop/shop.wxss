.body{
  width: 100%;
  padding: 30rpx 40rpx;
}
.header{
  margin-top: 35rpx;
  position: relative;
  align-items: flex-end;
}
.avatar{
  width: 130rpx;
  height: 130rpx;
  /* border-radius: 50%; */
  background: #55877E;
  box-shadow: rgb(44, 43, 43) 0rpx 0rpx 10rpx;
}
.avatar image{
  width: 110rpx;
  height: 110rpx;
  /* border-radius: 50%; */
}
.data{
  margin-left: 30rpx;
}
.level{
  width: 100rpx;
  height: 36rpx;
  border-radius: 18rpx;
  background: #F99D3A;
  line-height: 36rpx;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
}
.box{
  width: 100%;
  margin-top: 25rpx;
  padding: 20rpx 0rpx;
  border-radius: 15rpx;
  background: linear-gradient(to right,#FFE7CD,#FBD2A1);
}
.box image{
  width: 60rpx;
  height: 60rpx;
}
.shop_card{
  width: 100%;
  margin-top: 25rpx;
  border-radius: 15rpx;
  background: linear-gradient(to right,#BBECCA,#EFF0BD);
}
.card_child{
  width: 33.3%;
  padding: 20rpx 0rpx;
  border-right: 3rpx solid #2A8B8A;
}
.offer{
  width: 100%;
  height: 16%;
  margin-top: 25rpx;
}
.offer_card{
  width: 48%;
  height: 100%;
  padding: 20rpx;
  border-radius: 25rpx;
}
.go_btn{
  width: 100rpx;
  height: 38rpx;
  overflow: hidden;
  border-radius: 15rpx;
  background: #fff;
  line-height: 38rpx;
  text-align: center;
}
.rob_btn{
  width: 180rpx;
  height: 38rpx;
  overflow: hidden;
  border-radius: 15rpx;
  background: #87A589;
  color: #fff;
  line-height: 38rpx;
  text-align: center;
}
.offer-bg-one{
  background: #C5E0C7;
}
.offer-bg-two{
  background: #EFF9EF;
}
.condition{
  width: 100%;
  margin-top: 25rpx;
}
.cond_list{
  width: 100rpx;
  height: 40rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  background: #fff;
}
.cond_select{
  background: #3D8973;
  color: #fff;
}
.goods{
  width: 100%;
  margin-top: 25rpx;
}
.goods_list{
  width: 49%;
  height: 360rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background: #fff;
  border-radius: 20rpx;
}
.goods_list image{
  width: 100%;
  height: 70%;
}
.goods_name{
  font-size: 32rpx;
}
.goods_credits{
  font-size: 36rpx;
}
.goods_sales{
  font-size: 22rpx;
  font-weight: 500;
}