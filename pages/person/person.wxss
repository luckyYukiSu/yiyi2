.body{
  width: 100%;
  padding: 30rpx 40rpx;
}
.header{
  margin-top: 75rpx;
  margin-bottom: 75rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #55877E;
  box-shadow: rgb(44, 43, 43) 0rpx 0rpx 10rpx;
}
.avatar image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.data{
  margin: 80rpx 48rpx;
}
.function_list{
  width: 100%;
  position: relative;
  overflow: hidden;
  /* height: 120rpx; */
  padding: 30rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
}
.list_img{
  width: 60rpx;
  height: 60rpx;
}
.list_next{
  width: 30rpx;
  height: 30rpx;
}
.star{
  margin-bottom: 0;
  border-radius: 15rpx 15rpx 0 0;
}
.service{
  margin-bottom: 0;
  border-radius: 0;
}
.explain{
  border-radius: 0 0 15rpx 15rpx;
}